<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoviesApiActivity"
    android:background="@drawable/bbgg"
    >

    <Button
        android:id="@+id/buttonGetMovies"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Get Movies Title"
        android:onClick="btnGetMoviesOnClick"
        android:background="@drawable/bg2"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:textSize="21dp"
        android:textStyle="bold"
        />

    <ListView
        android:id="@+id/lstMovies"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/buttonGetMovies"/>

    <Button
        android:id="@+id/btnMovieInfo"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_below="@id/lstMovies"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="View Movie Info."
        android:onClick="btnViewMovieInfoOnClick"
        android:background="@drawable/bg2"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:textSize="21dp"
        android:textStyle="bold"
        />

</RelativeLayout>

